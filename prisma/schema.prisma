generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id             String           @id @default(uuid())
  name           String
  email          String           @unique
  passwordHash   String
  createdAt      DateTime         @default(now())
  members        OrganizationMember[]
  transactions   Transaction[]
  anomalyReports AnomalyReport[]  @relation("auditor_reports")
}

model Role {
  id      Int     @id @default(autoincrement())
  name    String  @unique
  members OrganizationMember[]
}

model Organization {
  id            String              @id @default(uuid())
  name          String
  code          String   @unique
  description   String?
  createdAt     DateTime            @default(now())
  divisions     Division[]
  projects      Project[]
  categories    Category[]
  members       OrganizationMember[]
  transactions  Transaction[]       @relation("OrganizationTransactions")
}

model OrganizationMember {
  user         User         @relation(fields: [userId], references: [id])
  userId       String
  organization Organization @relation(fields: [orgId], references: [id])
  orgId        String
  role         Role         @relation(fields: [roleId], references: [id])
  roleId       Int
  joinedAt     DateTime     @default(now())

  @@id([userId, orgId])
}

model Division {
  id           String        @id @default(uuid())
  organization Organization   @relation(fields: [orgId], references: [id])
  orgId        String
  name         String
  projects     Project[]
}

model Project {
  id              String      @id @default(uuid())
  orgId           String
  organization    Organization @relation(fields: [orgId], references: [id])
  divisionId      String
  division        Division    @relation(fields: [divisionId], references: [id])
  projectName     String
  budgetAllocated Decimal?    @db.Decimal(18, 2)

  transactions    Transaction[]
}

model Category {
  id            String        @id @default(uuid())
  orgId         String?
  organization  Organization? @relation(fields: [orgId], references: [id])
  categoryName  String
  transactions  Transaction[]
}

model Transaction {
  id               String           @id @default(uuid())
  userId           String
  user             User             @relation(fields: [userId], references: [id])

  orgId            String
  organization     Organization      @relation("OrganizationTransactions", fields: [orgId], references: [id])

  projectId        String?
  project          Project?          @relation(fields: [projectId], references: [id])

  categoryId       String?
  category         Category?         @relation(fields: [categoryId], references: [id])

  amount           Decimal           @db.Decimal(18, 2)
  type             TransactionType
  description      String?
  transactionDate  DateTime
  status           TransactionStatus @default(Pending)
  aiAnomalyScore   Float?

  blockchainHash   String?
  blockchainTxId   String?

  attachments      Attachment[]
  anomalyReport    AnomalyReport? @relation(name: "TransactionAnomalyReport")

  blockchainRecord BlockchainRecord?

  createdAt        DateTime @default(now())
}

model Attachment {
  id            String       @id @default(uuid())
  transaction   Transaction  @relation(fields: [transactionId], references: [id])
  transactionId String
  fileName      String
  fileUrl       String
  fileSha256    String
  uploadedAt    DateTime @default(now())
}

model AnomalyReport {
  id            String        @id @default(uuid())
  transaction   Transaction   @relation(name: "TransactionAnomalyReport", fields: [transactionId], references: [id])
  transactionId String        @unique
  aiScore       Float
  reason        String?
  status        String        @default("Pending")
  auditor       User?         @relation("auditor_reports", fields: [auditorId], references: [id])
  auditorId     String?
  auditorNotes  String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model BlockchainRecord {
  id             String        @id @default(uuid())
  transaction    Transaction?  @relation(fields: [transactionId], references: [id])
  transactionId  String?       @unique
  blockchainHash String
  onchainTxId    String?
  blockHash      String?
  nodeInfo       String?
  status         String        @default("pending")
  createdAt      DateTime      @default(now())
  confirmedAt    DateTime?
}

model AuditLog {
  id         String   @id @default(uuid())
  entityType String
  entityId   String?
  action     String
  actorId    String?
  orgId      String?
  timestamp  DateTime @default(now())
  before     Json?
  after      Json?
  note       String?
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum TransactionStatus {
  Pending
  Approved
  Rejected
}
